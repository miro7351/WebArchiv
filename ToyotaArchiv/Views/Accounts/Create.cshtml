@model PA.TOYOTA.DB.Account

@{
    ViewData["Title"] = "Nový účet";
}

<style>

    /* table, th, td {
                        border: 1px solid black;
                        border-collapse: collapse;
                    }*/

    table, table TD, table TH {
        font-family: sans-serif;
        font-size: 13pt;
        color: black;
        /* background-color:#BBDEFB;*/
        /*background-color: whitesmoke;  toto je ovela lepsie*/
        background-color: white; /*vsetko sa vznasa vo vzduchoprazdne!!!*/
    }

</style>



<div class="container-fluid" style="width:95%">
    <div class="form-inline">
        <h3 class="text-left d-inline mr-4">Nový účet</h3>
        <span id="error" class="text-danger">@ViewBag.ErrorMessage</span>
    </div>
    <div class="d-flex p-2 justify-content-center">
        <a asp-action="Index" class="btn  btn-light" style="margin-right:50px;">Návrat</a>
        <input type="submit" value="Uložiť" class="btn  btn-light" onclick="document.forms['formCreate'].submit();" />

    </div>
    @* <hr />*@
    <div class="row" style="zoom: 80%">
        @*<div class="col-md-12">*@
        <form name="formCreate" asp-action="Create" onkeydown="document.getElementById('error').innerHTML='';">
            @*<div style="width:90%; margin:0 auto;">*@
            <div class="col-md-12">
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                <table width="500" cellspacing="5" cellpadding="10" align="center">
                    <tr>
                        <td width="100px"> <label asp-for="LoginName" class="control-label"></label></td>
                        <td width="250px"> <input asp-for="LoginName" class="form-control" /></td>
                        <td width="150px"> <span asp-validation-for="LoginName" class="text-danger"></span></td>
                    </tr>
                    <tr>
                        <td width="100px"><label asp-for="LoginPassword" class="control-label"></label></td>
                        <td width="250px"><input asp-for="LoginPassword" class="form-control" type="password" /></td>
                        <td width="250px"><span asp-validation-for="LoginPassword" class="text-danger"></span></td>
                    </tr>
                    <tr>
                        <td width="100px">
                            <label asp-for="LoginRola" class="control-label"></label>
                        </td>
                        <td width="280px">
                            <select name="LoginRola" id="LoginRola" class="form-control">
                                <option value="">--Vyber rolu--</option>
                                <option value="VEDUCI">VEDUCI</option>
                                <option value="SERVISNY_TECHNIK">SERVISNY_TECHNIK</option>
                                <option value="READONLY">READONLY</option>
                            </select>
                        </td>
                        <td width="150px"><span asp-validation-for="LoginRola" class="text-danger"></span></td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Aktivny" class="control-label"></label>
                        </td>
                        <td>
                            <input asp-for="Aktivny" type="checkbox" style="width:20px; height:20px;" />
                        </td>

                    </tr>
                </table>
            </div>
        </form>
    </div>
</div>






