@model PA.TOYOTA.DB.Account

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Naozaj vymazať záznam?</h3>
<div>
    <h4>Účet</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LoginName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LoginPassword)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LoginId" />
        <input type="submit" value="Vymazať" class="btn btn-danger" /> |
        <a asp-action="Index">Návrat</a>
    </form>
</div>
