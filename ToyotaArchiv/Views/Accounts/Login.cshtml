@{
    

    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Login";
}

<div class="text-center">
  <div class="div-center" style="border:1.5px solid black">
    <div class="content">

      <h3>Prihlásenie</h3>
      <hr style="height:2.5px;color:black;opacity:100%"  />

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label>Meno</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Meno"/> 
            </div>
            <div class="form-group">
                <label>Heslo</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Heslo"/> 
            </div>
            <hr style="width:0%">
            <div class="form-group">
                <label></label>
                <input type="submit" class="btn btn-primary" value="Vstup"/> 
            </div>
        </form>

    </div>
  </div>
</div>

