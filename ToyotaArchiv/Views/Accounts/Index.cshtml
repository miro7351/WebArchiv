@model IEnumerable<PA.TOYOTA.DB.Account>

@{
    ViewData["Title"] = "Účty";
}



<h4>Zoznam užívateľských rolí v aplikácii</h4>

<p>
    <a asp-action="Create">Nový účet</a>
    </p>
<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="datatableRoly" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead class="tableHeaderColor">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LoginName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LoginPassword)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LoginRola)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoginName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoginPassword)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoginRola)
                        </td>
                         <td>
                            @* <a asp-action="Edit" asp-route-id="@item.RoleId">Edit</a> |*@
                           @* <a asp-action="Details" asp-route-id="@item.RoleId">Detaily</a>*@
                            <a asp-action="Delete" asp-route-id="@item.LoginId">Vymazať</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
