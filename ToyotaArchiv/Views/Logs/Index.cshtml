@model IEnumerable<PA.TOYOTA.DB.Log>

@{
    ViewData["Title"] = "Logy";
}

<h3>Logovacie záznamy</h3>
@*<p>Logovacie záznamy: Index;   Rola:@ViewBag.Role; Login: @ViewBag.Login</p>*@

@*Logovacie zaznamy obsahuju popisy CRUD operacii v db tab. Zakazka, Rola*@

@*Here we are importing the stylesheet of Datatable (Bootstrap4) that we had installed earlier.
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />*@

<style>
table, table TD, table TH {
        font-family: sans-serif;
        font-size: 10pt;
        color: black;
    }
</style>
<div class="container">  
    <br />  
    <div style="width:90%; margin:0 auto;">  
        <table id="datatableLogy" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">  
            <thead class="tableHeaderColor">  
                <tr>  
                    <th>LogId</th>  
                    <th>Dátum vytvorenia</th>  
                    <th>Názov tabuľky</th>
                    <th>Správa</th> 
                    <th>Akcia</th>
                    <th>Užívateľ</th>
                </tr>  
            </thead> 
            <tbody>
            </tbody>
            <tfoot>
                <tr>
                    <th>LogId</th>  
                    <th>LogDate</th>  
                    <th>TableName</th>
                    <th>LogMessage</th> 
                    <th>UserAction</th>
                    <th>UserName</th>
                    </tr>
            </tfoot>
        </table>  
    </div>  
</div>

