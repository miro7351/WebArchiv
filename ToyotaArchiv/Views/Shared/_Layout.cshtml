    <style>
        #footer {
            position: fixed;
            padding: 10px 10px 0px 10px;
            bottom: 0;
            width: 100%;
            /* Height of the footer*/ 
            height: 40px;
            background: grey;
        }
    </style>


@{
    string rola  = ViewBag.Role;
    string login = ViewBag.Login;
}
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm py-2 navbar-dark bg-dark box-shadow mb-1 shadow-sm ">
            
         

            <div class="container-fluid" style="width:95%">
                <a class="navbar-brand" asp-area="" asp-controller="ZakazkyJQ" asp-action="Index">
                    <img src="~/images/autolux_2.png" height="50" align="left" alt="" class="d-inline-block ali gn-middle mr-2"> 
                </a>
                <a class="navbar-brand" asp-area="" asp-controller="ZakazkyJQ" asp-action="Index">
                    <span class="text-uppercase font-weight-bold align-self-center">Archív garančných opráv</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                          <a class="nav-link " asp-area="" asp-controller="ZakazkyJQ" asp-action="Index">Garančné opravy</a>
                        </li>
                       
                        @if (rola=="ADMIN")   @*Len pre rolu: ADMIN*@
                        {
                             <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Accounts" asp-action="Index">Účty</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Logs" asp-action="Index">Logy</a>
                            </li>
                             <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Errors" asp-action="Index">Chyby</a>
                            </li>
                        }
                        else if ( rola=="VEDUCI")   @*Len pre rolu: u VEDUCI*@
                        {
                             <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Accounts" asp-action="Index">Účty</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Logs" asp-action="Index">Logy</a>
                            </li>
                        }

                    </ul>

                    <span id="linkSpan" class="text-white right"><b>@login&nbsp;|&nbsp;@rola&nbsp;&nbsp;&nbsp;<a class="odhlasenie" style="margin-left:10px" href="../Login/Logout">Odhlásiť</a></b></span>
 
                </div>

            </div>
        </nav>
    </header>


  <div class="container-fluid">   @* MH zmena 20.04.2022   container-fluid  roztahuje na celu sirku displeja *@
       <main role="main" class="pb-2">
            @RenderBody()
        </main>
    </div>

