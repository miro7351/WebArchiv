@model IEnumerable<DataTable1.DB.Model.CustomerTb>

@{
    ViewData["Title"] = "Index";
}

<p>DemoGrid: Index</p>


<p>
    <a asp-action="Create">Nová garančná oprava</a> Rola:@ViewBag.Role

</p>

@*Here we are importing the stylesheet of Datatable (Bootstrap4) that we had installed earlier.*@
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<div class="container">  
    <br />  
    <div style="width:90%; margin:0 auto;">  
        <table id="tableCustomer" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">  
            <caption><h3>Zoznam garančných opráv</h3></caption>
            <thead style='background-color:#39C0ED'>  
                <tr>  
                    <th>CustomerId</th>  
                    <th>Meno</th>  
                    <th>Adresa</th>  
                    <th>Krajina</th>  
                    <th>Mesto</th>  
                    <th>Telefón</th>  
                     @if(ViewBag.Role=="ADMIN")
                     {
                        <th></th>  
                        <th></th>
                    }
                </tr>  
            </thead>  
        </table>  
    </div>  
</div>

@*Section "Scripts" bude vlozena do _Layoutu az ked sa natiahnu jquery library.
CUSTOM LIBRARY musia byt loaded az po natiahnuti jQuery kniznic.
JE TI VELMI DOLEZITE NATIAHNUT jQUERY library ako PRVE (pred custom library), lebo ak sa to tak neurobi nebude to fungovat!!
customerDatatable.js obahuje javascript a jQuery metody pre zobrazenie zaznamov
*@

@section Scripts
{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
   
